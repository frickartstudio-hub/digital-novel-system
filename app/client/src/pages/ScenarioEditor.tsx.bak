import { Button } from '@/components/ui/button';
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from '@/components/ui/card';
import { Input } from '@/components/ui/input';
import { Label } from '@/components/ui/label';
import { Textarea } from '@/components/ui/textarea';
import type { Scene, ScenarioData } from '@/types/novel';
import { Download, Eye, FileJson, Plus, Trash2, Upload } from 'lucide-react';
import { useRef, useState } from 'react';
import { toast } from 'sonner';
import { useLocation } from 'wouter';
import { SceneEditForm } from '@/components/SceneEditForm';
import { ApiSettingsDialog } from '@/components/ApiSettingsDialog';
import { AiScenarioGeneratorDialog } from '@/components/AiScenarioGeneratorDialog';
import { Settings, Sparkles } from 'lucide-react';

export default function ScenarioEditor() {
  const [, setLocation] = useLocation();
  const [scenario, setScenario] = useState<ScenarioData>({
    title: '譁ｰ縺励＞繧ｷ繝翫Μ繧ｪ',
    author: '',
    version: '1.0',
    description: '',
    scenes: [],
    metadata: {
      totalScenes: 0,
      estimatedDuration: 0,
      tags: [],
      rating: '蜈ｨ蟷ｴ鮨｢',
    },
  });

  const [selectedSceneIndex, setSelectedSceneIndex] = useState<number | null>(null);
  const fileInputRef = useRef<HTMLInputElement>(null);
  const [apiSettingsOpen, setApiSettingsOpen] = useState(false);
  const [aiScenarioGeneratorOpen, setAiScenarioGeneratorOpen] = useState(false);

  // 繝｡繧ｿ繝・・繧ｿ縺ｮ譖ｴ譁ｰ
  const updateMetadata = (field: string, value: string) => {
    setScenario((prev) => ({
      ...prev,
      [field]: value,
    }));
  };

  // 繧ｷ繝ｼ繝ｳ縺ｮ霑ｽ蜉
  const addScene = () => {
    const newScene: Scene = {
      id: scenario.scenes.length + 1,
      type: 'image',
      source: '',
      duration: 5000,
      audio: {},
      subtitles: [],
      transitions: {
        nextSceneId: null,
        effect: 'fade',
      },
    };

    setScenario((prev) => ({
      ...prev,
      scenes: [...prev.scenes, newScene],
      metadata: {
        ...prev.metadata!,
        totalScenes: prev.scenes.length + 1,
      },
    }));

    setSelectedSceneIndex(scenario.scenes.length);
    toast.success('譁ｰ縺励＞繧ｷ繝ｼ繝ｳ繧定ｿｽ蜉縺励∪縺励◆');
  };

  // 繧ｷ繝ｼ繝ｳ縺ｮ蜑企勁
  const deleteScene = (index: number) => {
    setScenario((prev) => {
      const newScenes = prev.scenes.filter((_, i) => i !== index);
      // ID繧貞・蜑ｲ繧雁ｽ薙※
      const reindexedScenes = newScenes.map((scene, i) => ({
        ...scene,
        id: i + 1,
        transitions: {
          ...scene.transitions,
          nextSceneId: i < newScenes.length - 1 ? i + 2 : null,
        },
      }));

      return {
        ...prev,
        scenes: reindexedScenes,
        metadata: {
          ...prev.metadata!,
          totalScenes: reindexedScenes.length,
        },
      };
    });

    setSelectedSceneIndex(null);
    toast.success('繧ｷ繝ｼ繝ｳ繧貞炎髯､縺励∪縺励◆');
  };

  // JSON繧ｨ繧ｯ繧ｹ繝昴・繝・
  const exportJSON = () => {
    const json = JSON.stringify(scenario, null, 2);
    const blob = new Blob([json], { type: 'application/json' });
    const url = URL.createObjectURL(blob);
    const a = document.createElement('a');
    a.href = url;
    a.download = 'scenario.json';
    a.click();
    URL.revokeObjectURL(url);
    toast.success('JSON繝輔ぃ繧､繝ｫ繧偵ム繧ｦ繝ｳ繝ｭ繝ｼ繝峨＠縺ｾ縺励◆');
  };

  // JSON繧､繝ｳ繝昴・繝・
  const importJSON = (event: React.ChangeEvent<HTMLInputElement>) => {
    const file = event.target.files?.[0];
    if (!file) return;

    const reader = new FileReader();
    reader.onload = (e) => {
      try {
        const json = JSON.parse(e.target?.result as string);
        setScenario(json);
        setSelectedSceneIndex(null);
        toast.success('JSON繝輔ぃ繧､繝ｫ繧定ｪｭ縺ｿ霎ｼ縺ｿ縺ｾ縺励◆');
      } catch (error) {
        console.error('Failed to parse JSON:', error);
        toast.error('JSON繝輔ぃ繧､繝ｫ縺ｮ隱ｭ縺ｿ霎ｼ縺ｿ縺ｫ螟ｱ謨励＠縺ｾ縺励◆');
      }
    };
    reader.readAsText(file);
  };

  // 繝励Ξ繝薙Η繝ｼ
  const preview = () => {
    // 繧ｷ繝翫Μ繧ｪ繧値ocalStorage縺ｫ菫晏ｭ・
    localStorage.setItem('preview_scenario', JSON.stringify(scenario));
    // 繝励Ξ繝薙Η繝ｼ繝壹・繧ｸ縺ｫ驕ｷ遘ｻ
    setLocation('/preview');
  };

  return (
    <div className="min-h-screen bg-background">
      {/* 繝倥ャ繝繝ｼ */}
      <header className="border-b bg-card">
        <div className="container flex items-center justify-between py-4">
          <div className="flex items-center gap-2">
            <FileJson className="h-6 w-6 text-primary" />
            <h1 className="text-2xl font-bold">繧ｷ繝翫Μ繧ｪ繧ｨ繝・ぅ繧ｿ繝ｼ</h1>
          </div>
          <div className="flex items-center gap-2">
            <Button variant="outline" onClick={() => setAiScenarioGeneratorOpen(true)}>
              <Sparkles className="mr-2 h-4 w-4" />
              AI逕滓・
            </Button>
            <Button variant="outline" onClick={() => setApiSettingsOpen(true)}>
              <Settings className="mr-2 h-4 w-4" />
              API險ｭ螳・
            </Button>
            <Button variant="outline" onClick={() => fileInputRef.current?.click()}>
              <Upload className="mr-2 h-4 w-4" />
              繧､繝ｳ繝昴・繝・
            </Button>
            <input
              ref={fileInputRef}
              type="file"
              accept=".json"
              className="hidden"
              onChange={importJSON}
            />
            <Button variant="outline" onClick={exportJSON}>
              <Download className="mr-2 h-4 w-4" />
              繧ｨ繧ｯ繧ｹ繝昴・繝・
            </Button>
            <Button onClick={preview}>
              <Eye className="mr-2 h-4 w-4" />
              繝励Ξ繝薙Η繝ｼ
            </Button>
          </div>
        </div>
      </header>

      <div className="container py-6">
        <div className="grid grid-cols-1 gap-6 lg:grid-cols-3">
          {/* 蟾ｦ蛛ｴ: 繝｡繧ｿ繝・・繧ｿ縺ｨ繧ｷ繝ｼ繝ｳ荳隕ｧ */}
          <div className="space-y-6 lg:col-span-1">
            {/* 繝｡繧ｿ繝・・繧ｿ邱ｨ髮・*/}
            <Card>
              <CardHeader>
                <CardTitle>菴懷刀諠・ｱ</CardTitle>
                <CardDescription>繧ｷ繝翫Μ繧ｪ縺ｮ蝓ｺ譛ｬ諠・ｱ繧貞・蜉帙＠縺ｦ縺上□縺輔＞</CardDescription>
              </CardHeader>
              <CardContent className="space-y-4">
                <div className="space-y-2">
                  <Label htmlFor="title">繧ｿ繧､繝医Ν</Label>
                  <Input
                    id="title"
                    value={scenario.title}
                    onChange={(e) => updateMetadata('title', e.target.value)}
                    placeholder="菴懷刀縺ｮ繧ｿ繧､繝医Ν"
                  />
                </div>
                <div className="space-y-2">
                  <Label htmlFor="author">菴懆・錐</Label>
                  <Input
                    id="author"
                    value={scenario.author || ''}
                    onChange={(e) => updateMetadata('author', e.target.value)}
                    placeholder="菴懆・錐"
                  />
                </div>
                <div className="space-y-2">
                  <Label htmlFor="description">隱ｬ譏・/Label>
                  <Textarea
                    id="description"
                    value={scenario.description || ''}
                    onChange={(e) => updateMetadata('description', e.target.value)}
                    placeholder="菴懷刀縺ｮ隱ｬ譏・
                    rows={3}
                  />
                </div>
                <div className="text-sm text-muted-foreground">
                  邱上す繝ｼ繝ｳ謨ｰ: {scenario.scenes.length}
                </div>
              </CardContent>
            </Card>

            {/* 繧ｷ繝ｼ繝ｳ荳隕ｧ */}
            <Card>
              <CardHeader>
                <CardTitle>繧ｷ繝ｼ繝ｳ荳隕ｧ</CardTitle>
                <CardDescription>繧ｷ繝ｼ繝ｳ繧偵け繝ｪ繝・け縺励※邱ｨ髮・/CardDescription>
              </CardHeader>
              <CardContent>
                <div className="space-y-2">
                  {scenario.scenes.map((scene, index) => (
                    <div
                      key={scene.id}
                      className={`flex items-center justify-between rounded-lg border p-3 cursor-pointer transition-colors ${
                        selectedSceneIndex === index
                          ? 'border-primary bg-primary/5'
                          : 'hover:bg-accent'
                      }`}
                      onClick={() => setSelectedSceneIndex(index)}
                    >
                      <div>
                        <div className="font-medium">繧ｷ繝ｼ繝ｳ {scene.id}</div>
                        <div className="text-xs text-muted-foreground">
                          {scene.type === 'image' ? '逕ｻ蜒・ : '蜍慕判'} 窶｢ {scene.subtitles.length}蟄怜ｹ・
                        </div>
                      </div>
                      <Button
                        variant="ghost"
                        size="icon"
                        onClick={(e) => {
                          e.stopPropagation();
                          deleteScene(index);
                        }}
                      >
                        <Trash2 className="h-4 w-4 text-destructive" />
                      </Button>
                    </div>
                  ))}
                  <Button onClick={addScene} className="w-full" variant="outline">
                    <Plus className="mr-2 h-4 w-4" />
                    繧ｷ繝ｼ繝ｳ繧定ｿｽ蜉
                  </Button>
                </div>
              </CardContent>
            </Card>
          </div>

          {/* 蜿ｳ蛛ｴ: 繧ｷ繝ｼ繝ｳ邱ｨ髮・お繝ｪ繧｢ */}
          <div className="lg:col-span-2">
            {selectedSceneIndex !== null ? (
              <Card>
                <CardHeader>
                  <CardTitle>繧ｷ繝ｼ繝ｳ {scenario.scenes[selectedSceneIndex].id} 縺ｮ邱ｨ髮・/CardTitle>
                  <CardDescription>繧ｷ繝ｼ繝ｳ縺ｮ隧ｳ邏ｰ繧定ｨｭ螳壹＠縺ｦ縺上□縺輔＞</CardDescription>
                </CardHeader>
                <CardContent>
                  <SceneEditForm
                    scene={scenario.scenes[selectedSceneIndex]}
                    onUpdate={(updatedScene) => {
                      setScenario((prev) => ({
                        ...prev,
                        scenes: prev.scenes.map((s, i) =>
                          i === selectedSceneIndex ? updatedScene : s
                        ),
                      }));
                    }}
                  />
                </CardContent>
              </Card>
            ) : (
              <Card>
                <CardContent className="flex min-h-[400px] items-center justify-center">
                  <div className="text-center text-muted-foreground">
                    <FileJson className="mx-auto mb-4 h-12 w-12 opacity-50" />
                    <p>蟾ｦ蛛ｴ縺ｮ繧ｷ繝ｼ繝ｳ荳隕ｧ縺九ｉ繧ｷ繝ｼ繝ｳ繧帝∈謚槭☆繧九°縲・/p>
                    <p>譁ｰ縺励＞繧ｷ繝ｼ繝ｳ繧定ｿｽ蜉縺励※縺上□縺輔＞</p>
                  </div>
                </CardContent>
              </Card>
            )}
          </div>
        </div>
      </div>

      {/* API險ｭ螳壹ム繧､繧｢繝ｭ繧ｰ */}
      <ApiSettingsDialog open={apiSettingsOpen} onOpenChange={setApiSettingsOpen} />
      
      {/* AI繧ｷ繝翫Μ繧ｪ逕滓・繝繧､繧｢繝ｭ繧ｰ */}
      <AiScenarioGeneratorDialog
        open={aiScenarioGeneratorOpen}
        onOpenChange={setAiScenarioGeneratorOpen}
        onGenerated={(generatedScenario) => {
          setScenario(generatedScenario);
          setSelectedSceneIndex(null);
          toast.success('繧ｷ繝翫Μ繧ｪ繧定ｪｭ縺ｿ霎ｼ縺ｿ縺ｾ縺励◆');
        }}
      />
    </div>
  );
}
